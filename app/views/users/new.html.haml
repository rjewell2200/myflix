%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(@user, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-4") do |f|
        %header
          %h1 Register
        %fieldset
          = f.email_field :email, label: "Email Address"
          = f.password_field :password
          = f.text_field :full_name, label: "Full Name"
          = hidden_field_tag :token, @invitation_token
        %fieldset.actions.control-group
          .controls
            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="pk_test_IYfpVaTxWMSaEOP6N60R78aQ" data-name="MyFLiX Sign Up Charge" data-description="$9.99 to sign up" data-amount="2000"> </script>